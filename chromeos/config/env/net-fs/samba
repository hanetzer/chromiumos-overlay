  /usr/sbin
  /usr/bin/cifsdd
  /usr/bin/dbwrap_tool
  /usr/bin/eventlogadm
  /usr/bin/findsmb
  /usr/bin/ndrdump
  /usr/bin/nmblookup
  /usr/bin/ntlm_auth
  /usr/bin/oLschema2ldif
  /usr/bin/pdbedit
  /usr/bin/pidl
  /usr/bin/profiles
  /usr/bin/regdiff
  /usr/bin/regpatch
  /usr/bin/regshell
  /usr/bin/regtree
  /usr/bin/rpcclient
  /usr/bin/samba-regedit
  /usr/bin/sharesec
