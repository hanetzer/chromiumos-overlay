  /usr/bin/smbget
  /usr/bin/smbpasswd
  /usr/bin/smbspool
  /usr/bin/smbstatus
  /usr/bin/smbtar
  /usr/bin/smbtree
  /usr/bin/testparm
  /usr/bin/wbinfo
