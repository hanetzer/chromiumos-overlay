index 6556927..1607665 100644
--- a/src/gallium/winsys/amdgpu/drm/addrlib/addrinterface.cpp
+++ b/src/gallium/winsys/amdgpu/drm/addrlib/addrinterface.cpp
@@ -35,6 +35,7 @@

